<!-- 查询用户已经选择的科室 -->
  <select id="getUserDeptidsById" resultType="long">
      select deptid from tb_user_dept where userid=#{id}
  </select>

<!-- 删除用户已经选择的职位 -->
  <delete id="deleteUserPost">
      delete from tb_user_post where userid=#{userid}
  </delete>

<!-- 删除用户已经选择的科室 -->
  <delete id="deleteUserDept">
      delete from tb_user_dept where userid=#{userid}
  </delete>

  <!-- 添加科室 -->
  <insert id="addUserDept">
      insert into tb_user_dept(userid,deptid) values (#{userid},#{deptid})
  </insert>

  <!-- 查看用户是否有科室 -->
  <select id="selectDeptById" resultType="com.lening.entity.DeptBean">
      select b.* from tb_user_dept a
      left join tb_dept b on a.deptid = b.id
      where a.userid = #{id}
  </select>

  <!-- 查看科室职位中间表 -->
  <select id="selectPostByDeptid" resultType="com.lening.entity.PostBean">
      select b.* from tb_dept_post a left join tb_post b on a.postid=b.id
      where a.deptid=#{deptid}
  </select>

  <!-- 删除人员职位中间表 -->
  <delete id="deleteUserPostById">
       delete from tb_user_post where userid=#{id}
  </delete>

  <!-- 添加人员职位中间表 -->
  <insert id="saveUserPost">
    insert into tb_user_post(userid,postid) values(#{userid},#{postid})
  </insert>

  <!-- 登录 -->
  <select id="getLogin" resultType="com.lening.entity.UserBean">
       select * from tb_user where accountname = #{uname} or telphone = #{uname}
  </select>

  <!-- 根据用户id查询没有按钮的菜单并且是主职位登录的 -->
  <select id="getUserMeunListById" resultType="com.lening.entity.MeunBean">
      select d.* FROM tb_user_post a
      LEFT JOIN tb_post b on a.postid = b.id
      LEFT JOIN tb_post_meun c on b.id = c.postid
      LEFT JOIN tb_meun d on c.meunid = d.id
      where d.isbutton = 0
      and a.ismain = 1
      and a.userid=#{userid}
  </select>

  <!-- 查询登录的用户能访问的url -->
  <select id="getUserMeunUrlsById" resultType="string">
    select d.url FROM tb_user_post a
      LEFT JOIN tb_post b on a.postid = b.id
      LEFT JOIN tb_post_meun c on b.id = c.postid
      LEFT JOIN tb_meun d on c.meunid = d.id
      where a.userid=#{userid}
  </select>

  <!-- 根据用户id查询他的副职位 -->
<select id="getDeputyPosition" resultType="com.lening.entity.PostBean">
      select b.* FROM tb_user_post a
      LEFT JOIN tb_post b ON a.postid = b.id
      WHERE a.ismain = 0 and a.userid = #{userid}
</select>


